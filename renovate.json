{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "argocd": {
    "managerFilePatterns": [
      "/argo/.+\\.ya?ml$/"
    ]
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "argo/**"
      ],
      "matchStrings": [
        "\\s*#\\s*renovate:\\s*datasource=(?<datasource>.*) depName=(?<depName>.*)\\s*\\n\\s*tag:\\s*\"(?<currentValue>.*)\"\\s*\\n\\s*sha:\\s*\"(?<currentDigest>sha256:[a-f0-9]+)\"\\s*"
      ],
      "versioningTemplate": "semver"
    }
  ],
  "kustomize": {
    "managerFilePatterns": [
      "/argo/.+kustomization\\.ya?ml$/"
    ]
  }
}
